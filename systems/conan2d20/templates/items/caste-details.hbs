<div class="grid-2-columns">


	<div class="form-group stacked">
		{{> items/partials/choice-selector
			config=casteStoriesConfig
		}}
	</div>

	<div class="form-group stacked">
		{{> items/partials/choice-selector
			config=casteTalentConfig
		}}
	</div>

	<div class="form-group">

		<div class="form-group stacked">
			<label>{{localize "CONAN.Item.Caste.SocialStanding.label"}}</label>
			<input
				type="Number"
				name="system.socialStanding"
				value="{{item.system.socialStanding}}"
				data-dtype="Number"
			/>
		</div>

		<div class="form-group stacked">
			<label>{{localize "CONAN.Item.Caste.Skill.label"}}</label>
			<select name="system.skill" data-dtype="String">
				{{#select item.system.skill}}
					{{#each CONFIG.sortedSkills}}
						<option value="{{this.key}}">
							{{this.name}}
						</option>
					{{/each}}
				{{/select}}
			</select>
		</div>

	</div>

</div>
