<div
	class="conan2d20 chat-card item-card"
	data-actor-id="{{actorId}}"
	data-item-id="{{item._id}}"
	draggable="true"
>
	<header class="card-header flexrow">
		<h2>{{item.name}}</h2>
		<img src="{{item.img}}" title="{{item.name}}" />
	</header>

	<div class="card-content">
		{{{data.description.value}}}
	</div>

	{{#each data.itemDetails}}
		<div class="card-content">
			<label>
				{{localize this.label}}:
			</label>
			{{{this.detail}}}
		</div>
	{{/each}}
	<br />
	{{#if canUseItem}}
	<div class="card-buttons">
		<button
			class="tag weapon_damage chat-execute-attack"
			data-action="weaponAttack"
		>
			{{localize 'CONAN.attackRollLabel'}}
		</button>
		<button
			class="tag weapon_attack chat-execute-damage"
			data-action="weaponDamage"
		>
			{{localize 'CONAN.damageRollLabel'}}
		</button>
		{{#if data.hasShieldSoak}}
			<button
				class="tag weapon_soak chat-execute-soak"
				data-action="shieldSoak"
			>
				{{localize 'CONAN.shieldSoakRollLabel'}}
			</button>
		{{/if}}
	</div>
	{{/if}}

	{{> partials/card-footer-properties }}
</div>
